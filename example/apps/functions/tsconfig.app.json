{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"lib": ["es2021"],
		"module": "es2022",
		"target": "es2021",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"sourceMap": true
	},
	"exclude": ["**/*.spec.ts", "scripts"],
	"include": ["**/*.ts"]
}
